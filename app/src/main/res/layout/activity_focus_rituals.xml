<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#121212"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Single Direct Child for ScrollView -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingTop="32dp"
        android:paddingBottom="32dp">

        <!-- Breathing Circle + Text Overlap -->
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="32dp"
            android:visibility="gone"
            android:id="@+id/breathingContainer"
            android:background="@android:color/darker_gray">

            <ImageView
                android:id="@+id/breathingCircle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/breathing_circle"
                android:adjustViewBounds="true"
                android:contentDescription="Breathing_Circle"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/breathingText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Get Ready..."
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="gone"/>
        </FrameLayout>

        <!-- Checklist (Hidden initially) -->
        <LinearLayout
            android:id="@+id/checklistLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp" />

        <!-- Buttons with MaterialButton for rounded corners and elevation -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBreathing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:text="Start Breathing Ritual"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:elevation="6dp"
            android:backgroundTint="#BB86FC"
            android:padding="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAmbient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="Play Ambient Sound"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:elevation="6dp"
            android:backgroundTint="#03DAC5"
            android:padding="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAffirmations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="Show Affirmations"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:elevation="6dp"
            android:backgroundTint="#4CAF50"
            android:padding="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChecklist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Checklist"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:elevation="6dp"
            android:backgroundTint="#FF9800"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"/>

    </LinearLayout>
</ScrollView>
