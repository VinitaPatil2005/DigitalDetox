<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <ImageView
        android:id="@+id/onboardImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/splashbg" />

    <TextView
        android:id="@+id/onboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feature Title"
        android:fontFamily="@font/titilliumweb_regular"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/onboardDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feature description goes here."
        android:fontFamily="@font/titilliumweb_regular"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:gravity="center" />
</LinearLayout>
