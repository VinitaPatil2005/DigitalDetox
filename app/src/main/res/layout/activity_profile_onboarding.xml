<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/titilliumweb_light"
            android:text="1/4 steps completed"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progress="25"
            android:max="100"
            android:progressTint="@color/purple_700"
            android:layout_marginBottom="25dp"
            android:backgroundTint="@color/grey" />

        <TextView
            android:text="Create your DigitalDetox profile"
            android:textSize="20sp"
            android:paddingBottom="25dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/titilliumweb_bold"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Username Input -->
        <EditText
            android:id="@+id/etUsername"
            android:hint="Username"
            android:fontFamily="@font/titilliumweb_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="4dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_marginBottom="16dp" />

        <!-- Birthdate Input (with DatePicker) -->
        <EditText
            android:id="@+id/etBirthdate"
            android:hint="Birthdate"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            android:fontFamily="@font/titilliumweb_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="4dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_marginBottom="25dp" />

        <!-- Gender Selection -->
        <TextView
            android:text="Select your gender"
            android:textColor="@color/white"
            android:fontFamily="@font/titilliumweb_regular"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/genderGroup"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rbMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:fontFamily="@font/titilliumweb_regular"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rbFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:fontFamily="@font/titilliumweb_regular"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/rbOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prefer not to"
                android:fontFamily="@font/titilliumweb_regular"
                android:textColor="@color/white" />
        </RadioGroup>

        <!-- Continue Button -->
        <Button
            android:id="@+id/btnContinue"
            android:text="Continue"
            android:fontFamily="@font/titilliumweb_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_700"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <!-- Skip Option -->
        <TextView
            android:id="@+id/skip"
            android:text="I'll do this later"
            android:fontFamily="@font/titilliumweb_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
