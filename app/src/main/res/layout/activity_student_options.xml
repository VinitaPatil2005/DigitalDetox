<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C2526"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🌳 Student Tools"
            android:textColor="#F5F5F0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Stylized Buttons with Gradients -->
        <Button
            android:id="@+id/btnDesignTimetable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🗓 Design a Timetable"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/gradient_button"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnFocusRituals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🧘‍♂️ Focus Rituals"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/gradient_button"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnPomodoro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⏱ Pomodoro Focus"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/gradient_button"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnStudyTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 Study Tips"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/gradient_button"
            android:padding="16dp"
            android:layout_marginBottom="24dp" />
    </LinearLayout>
</ScrollView>