<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/grey"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/offerMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50 coins will be used for 25% discount on Dance!"
        android:fontFamily="@font/titilliumweb_light"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnRedeem"
        android:layout_width="match_parent"
        android:fontFamily="@font/titilliumweb_regular"
        android:layout_height="wrap_content"
        android:text="Redeem Now"
        android:backgroundTint="@color/purple_500"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:id="@+id/codeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/redeemCodeText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="GYM15OFF"
            android:fontFamily="@font/titilliumweb_regular"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnCopyCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy"
            android:fontFamily="@font/titilliumweb_regular"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/teal_700"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
