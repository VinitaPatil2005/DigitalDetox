<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/black"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Focus"
        android:textColor="#B8C9D4"
        android:textStyle="bold"
        android:fontFamily="@font/titilliumweb_regular"
        android:textSize="22sp"
        android:gravity="center"
        android:paddingTop="32dp"
        android:paddingBottom="16dp"
        android:lineSpacingExtra="4dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="When you need time to focus, you can pause distracting apps and hide their notifications."
        android:textColor="#AAB6C2"
        android:fontFamily="@font/titilliumweb_regular"
        android:textSize="16sp"
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        android:paddingBottom="24dp" />

    <!-- Image -->
    <ImageView
        android:id="@+id/ivFocusImage"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/ffocus"
        android:scaleType="fitCenter"
        android:background="@drawable/image_card_bg"
        android:layout_marginBottom="32dp" />

    <!-- Start Button -->
    <Button
        android:id="@+id/btnStart"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Start"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
android:fontFamily="@font/titilliumweb_regular"
        android:backgroundTint="#3A68D8"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_button" />

</LinearLayout>
