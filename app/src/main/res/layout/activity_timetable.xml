<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#121212"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“… Design Your Timetable"
        android:textColor="#BB86FC"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/editDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Day (e.g., Monday)"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#AA88FF"
        android:background="@drawable/purple_edittext"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/editType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type: Study / Break / Activity"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#AA88FF"
        android:background="@drawable/purple_edittext"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/editSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Subject/Activity"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#AA88FF"
        android:background="@drawable/purple_edittext"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/editTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Time Slot (e.g., 10:00 - 11:00)"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#AA88FF"
        android:background="@drawable/purple_edittext"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnAddToTimetable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_gravity="center"
        android:textColor="#121212"
        android:backgroundTint="#BB86FC"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ—“ Your Timetable:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:background="#1A1A1A">

        <LinearLayout
            android:id="@+id/timetableList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp" />
    </ScrollView>
</LinearLayout>
