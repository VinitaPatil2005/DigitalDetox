<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titilliumweb_bold"
        android:text="Bedtime mode"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Description -->
    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Get ready for bed by changing the screen to greyscale and muting calls, alerts, and other sounds."
        android:textColor="@color/white"
        android:fontFamily="@font/titilliumweb_regular"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Turn on Now Button -->
    <Button
        android:id="@+id/turn_on_now"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Turn on now"
        android:backgroundTint="#9C4DCC"
        android:textColor="@color/white"
        android:fontFamily="@font/titilliumweb_regular"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Schedule Title -->
    <TextView
        android:id="@+id/scheduled_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn on as scheduled"
        android:textColor="#D8B4F8"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/turn_on_now"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Schedule Switch -->
    <Switch
        android:id="@+id/scheduled_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        app:layout_constraintTop_toTopOf="@id/scheduled_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Start Time -->
    <TextView
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time: 10:00 PM"
        android:textColor="#E1BEE7"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/scheduled_title"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- End Time -->
    <TextView
        android:id="@+id/end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time: 7:00 AM"
        android:textColor="#E1BEE7"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/start_time"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Schedule Summary -->
    <TextView
        android:id="@+id/schedule_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set schedule\n10:00 pm - 7:00 am the next day"
        android:textColor="#B39DDB"
        android:textStyle="italic"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/end_time"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Alarm Tip -->
    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tip\nYou can set a bedtime alarm in the Clock app."
        android:textColor="#A89CC8"
        android:textSize="14sp"
        android:textStyle="italic"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/schedule_time"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Alarm Link -->
    <TextView
        android:id="@+id/bedtime_alarm_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bedtime alarm"
        android:textColor="#9D7BF3"
        android:textStyle="italic"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tip"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
