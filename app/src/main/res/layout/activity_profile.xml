<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1F1B24"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_profile"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:padding="8dp" />

        <!-- User Name -->
        <TextView
            android:id="@+id/tvUserName"
            android:text="Vinita Patil"
            android:fontFamily="@font/titilliumweb_regular"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <!-- User Email or Detail -->
        <TextView
            android:id="@+id/tvUserEmail"
            android:text="vinita@email.com"
            android:fontFamily="@font/titilliumweb_regular"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Total Coins Section -->


        <!-- Rewards Section -->
        <TextView
            android:id="@+id/tvRewardsToggle"
            android:text="View My Rewards â–¼"
            android:textColor="#00FFAA"
            android:fontFamily="@font/titilliumweb_regular"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:id="@+id/llRewardsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/titilliumweb_regular"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="#292634"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:elevation="4dp">

            <!-- Dollar Icon -->
            <ImageView
                android:id="@+id/imgDollarIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:src="@drawable/dollar" />

            <TextView
                android:id="@+id/tvTotalCoins"
                android:text="Total Coins: 120"
                android:fontFamily="@font/titilliumweb_regular"
                android:textColor="#FFD700"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <!-- Redeem Coins Button -->
            <TextView
                android:id="@+id/btnRedeemCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FFAA"
                android:text="Redeem Coins"
                android:textColor="#FFD700"
                android:fontFamily="@font/titilliumweb_regular"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginBottom="24dp" />

            <TextView
                android:text="Discount Available On:"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/titilliumweb_regular"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Cards Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@android:color/transparent"
                android:showDividers="middle"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center_horizontal">

                <!-- Yoga Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="#FF6F61"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/yoga"
                        android:layout_marginEnd="12dp"
                        app:tint="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yoga Classes"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:fontFamily="@font/titilliumweb_regular" />

                        <TextView
                            android:id="@+id/tvYogaDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15% OFF"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/discount_badge"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Dance Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="#42A5F5"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/dancing"
                        android:layout_marginEnd="12dp"
                        app:tint="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dance Classes"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:fontFamily="@font/titilliumweb_regular" />

                        <TextView
                            android:id="@+id/tvDanceDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25% OFF"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/discount_badge"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Gym Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="#66BB6A"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/gym"
                        android:layout_marginEnd="12dp"
                        app:tint="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gym Membership"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:fontFamily="@font/titilliumweb_regular" />

                        <TextView
                            android:id="@+id/tvGymDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50% OFF"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/discount_badge"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Coaching Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="#AB47BC"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/teaching"
                        app:tint="#FFFFFF"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Educational Coaching"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:fontFamily="@font/titilliumweb_regular" />

                        <TextView
                            android:id="@+id/tvCoachingDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="35% OFF"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/discount_badge"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>