<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Welcome Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level up your focus"
                android:textColor="#CCCCCC"
                android:textSize="16sp" />

            <!-- Tracking Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnDailyTracking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Daily Tracking"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnWeeklyTracking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Weekly Tracking" />
            </LinearLayout>

            <!-- Most Used Apps Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Most Used Apps"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvInstagramTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instagram: 2 hr"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvYouTubeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YouTube: 1 hr 30 min"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvWhatsAppTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WhatsApp: 1 hr"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <!-- Screen Time Section -->
            <TextView
                android:id="@+id/tvScreenTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Screen Time: 0 hr 0 min"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#111111"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>
