<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Enhanced Title with new styling -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“± Screen Time"
                android:textColor="@color/white"
                android:fontFamily="@font/titilliumweb_bold"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Time display from second layout -->
            <TextView
                android:id="@+id/tvTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0h 0m"
                android:textSize="42sp"
                android:textStyle="bold"
                android:textColor="#7289DA"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="28dp" />

            <!-- Tracking Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:weightSum="2"
                android:gravity="center">

                <Button
                    android:id="@+id/btnDailyTracking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Daily Tracking"
                    android:fontFamily="@font/titilliumweb_regular"
                    android:textStyle="bold"
                    android:backgroundTint="#1F1B24"
                    android:textColor="#BB86FC"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnWeeklyTracking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/titilliumweb_regular"
                    android:text="Weekly Tracking"
                    android:textStyle="bold"
                    android:backgroundTint="#1F1B24"
                    android:textColor="#BB86FC"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Usage Breakdown Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Usage Breakdown"
                android:textSize="16sp"
                android:textColor="#99AAB5"
                android:layout_marginBottom="8dp" />

            <!-- Usage Bar -->
            <LinearLayout
                android:id="@+id/usageBarContainer"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:background="#2A2D31"
                android:padding="2dp"
                android:layout_marginBottom="24dp" />

            <!-- Most Used Apps Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Most Used Apps"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnShowMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show More"
                    android:textColor="#BB86FC"
                    android:background="?android:attr/selectableItemBackground"
                    android:textAllCaps="false" />
            </LinearLayout>

            <!-- App Usage Details Container -->
            <LinearLayout
                android:id="@+id/usageDetailsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp" />

            <!-- Student Prompt -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you a student?"
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:textStyle="italic"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Motivational Quote -->
            <TextView
                android:id="@+id/tvMotivationalQuote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="'The secret of getting ahead is getting started.'"
                android:textColor="#00FFAA"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/quote_background"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true" />

            <!-- Gamification Card -->
            <LinearLayout
                android:id="@+id/gamificationCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/gamification_card_background"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/dollar"
                    android:contentDescription="Reward Icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily Challenge"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Complete today's goal and earn 50 coins!"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Start Bedtime Mode Button -->
            <Button
                android:id="@+id/btnStartBedtimeMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Bedtime Mode"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:fontFamily="@font/titilliumweb_regular"
                android:textColor="#121212"
                android:backgroundTint="#BB86FC"

                android:drawablePadding="8dp"
                android:padding="12dp" />

            <!-- Spacer -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#1F1B24"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>
