<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="16dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="#1E1E1E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_background"
        android:padding="24dp">

        <!-- Icon for motivation -->
        <ImageView
            android:id="@+id/affirmationIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_star"
            android:tint="#FFD700"
            android:contentDescription="Motivation Icon"/>

        <!-- Affirmation Text -->
        <TextView
            android:id="@+id/affirmationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Your mind is a powerhouse of focus and clarity."
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:lineSpacingExtra="4dp"/>

        <!-- Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFeelThePower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Feel the Power!"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            android:backgroundTint="#FF5722"
            app:rippleColor="#80FFFFFF"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>